<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AnimButton">

        <!-- R角度数 -->
        <attr name="animButtonR" format="integer" />
        <attr name="animButtonBgColor" format="color" />
        <attr name="animButtonDuration" format="integer" />

        <attr name="animButtonTxt" format="string" />
        <attr name="animButtonTxtSize" format="dimension" />
        <attr name="animButtonTxtColor" format="color" />

        <attr name="animButtonArcPadding" format="dimension" />
        <attr name="animButtonArcWidth" format="dimension" />
        <attr name="animButtonArcColor" format="color" />

    </declare-styleable>

    <declare-styleable name="DiyViewOne1">
        <attr name="oWidth" format="dimension" />
        <attr name="oBgColor" format="color" />
        <attr name="oColor" format="color" />
        <!-- 是否渐变 -->
        <attr name="oGradient" format="boolean" />
        <attr name="oGradientType">
            <enum name="oGradientLeftToRight" value="0x100" />
            <enum name="oGradientTopToBottom" value="0x200" />
        </attr>
        <attr name="oColor2" format="color" />
        <attr name="oMaxValue" format="integer" />
        <attr name="oValue" format="integer" />
        <attr name="oDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="DiyInputView">
        <!-- 框未输入颜色 -->
        <attr name="iFrameColor" format="color" />
        <!-- 框输入后颜色 -->
        <attr name="iFrameColor2" format="color" />
        <!-- 框宽度 -->
        <attr name="iFrameWidth" format="dimension" />
        <!-- 框圆角大小 -->
        <attr name="iFrameRadius" format="dimension" />
        <!-- 框数量 -->
        <attr name="iFrameLength" format="integer" />
        <!-- 框间距 -->
        <attr name="iFramePadding" format="dimension" />
        <!-- 文字输入颜色 -->
        <attr name="iFrameTxtColor" format="color" />
        <!-- 文字大小 -->
        <attr name="iFrameTxtSize" format="dimension" />
        <!-- 文字输入后是否隐藏 -->
        <attr name="iFrameTxtHidden" format="boolean" />
        <!-- 文字输入后隐藏的宽度 该属性与iFrameTxtHiddenType 共用 -->
        <attr name="iFrameTxtHiddenWidth" format="dimension" />
        <!-- 文字输入后隐藏的样式 -->
        <attr name="iFrameTxtHiddenType">
            <enum name="circle" value="0x100" />
            <enum name="rectangle" value="0x200" />
            <enum name="triangle" value="0x300" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BatteryView">
        <!-- 外框的颜色 -->
        <attr name="bv_outRectColor" format="color" />
        <!-- 外框的宽度 -->
        <attr name="bv_outRectWidth" format="dimension" />
        <!-- 内框的颜色 -->
        <attr name="bv_innerRectColor" format="color" />
        <!-- 內外框之间的边距 -->
        <attr name="bv_outInnerPadding" format="dimension" />
        <!-- 电池正极的宽 -->
        <attr name="bv_anodeWidth" format="dimension" />
        <!-- 电池正极的高 -->
        <attr name="bv_anodeHeight" format="dimension" />
        <!-- 电池正极的方向 -->
        <attr name="bv_anodeOrientation">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <!-- 弧度 -->
        <attr name="bv_radian" format="dimension" />
        <!-- 电池电量 0到100 -->
        <attr name="bv_value" format="integer" />
    </declare-styleable>

</resources>